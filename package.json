{
  "name": "monospaced",
  "version": "1.0.0.alpha-1",
  "private": true,
  "devDependencies": {
    "@mdx-js/loader": "^0.15.5",
    "@mdx-js/mdx": "^0.15.5",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-inline-react-svg": "^0.5.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "caniuse-lite": "^1.0.30000697",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^4.5.2",
    "core-js": "^2.5.7",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lighthouse": "^3.2.1",
    "mini-css-extract-plugin": "^0.4.2",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-document-meta": "^2.1.2",
    "react-dom": "^16.3.0",
    "react-feather": "^1.1.3",
    "react-router": "^3.2.1",
    "react-router-to-array": "^0.1.3",
    "react-test-renderer": "^16.3.1",
    "remark-emoji": "^2.0.1",
    "remark-highlight.js": "^5.0.0",
    "static-site-generator-webpack-plugin": "^3.4.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "engines": {
    "node": ">=10.9.0",
    "npm": ">=6.2.0",
    "yarn": ">=1.12.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js",
      "!src/legacy/**/*.js",
      "!src/routes/content.js",
      "!src/index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/test/__mocks__/style.mock.js",
      "\\.(htaccess|ico|jpg|png|svg|webmanifest|woff|woff2|xml)$": "<rootDir>/test/__mocks__/file.mock.js",
      "\\.(mdx)$": "<rootDir>/test/__mocks__/mdx.mock.js"
    },
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "build": "webpack -p --progress && yarn storybook:build",
    "deploy": "yarn lint && yarn test && yarn build && bin/deploy.sh && yarn lighthouse:deploy",
    "format": "prettier --write 'src/**/*.@(css|js)'",
    "lighthouse": "lighthouse https://monospaced.com --chrome-flags=--headless --output=json",
    "lighthouse:build": "yarn lighthouse --output=html --output-path=build/lighthouse",
    "lighthouse:deploy": "yarn lighthouse:build --quiet && bin/deploy-lighthouse.sh",
    "lint": "eslint --ext js,json --ignore-path .eslintignore ./",
    "start": "webpack-dev-server --progress",
    "storybook": "start-storybook -s ./src/assets -p 9001",
    "storybook:build": "build-storybook -o build/storybook",
    "test": "jest --coverage"
  }
}
